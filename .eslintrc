{
  "extends": [
    "react-app",
    "react-app/jest",
    "plugin:prettier/recommended",
    "prettier"
  ],
  "rules": {
    "import/first": 0,
    "prettier/prettier": ["error", { "singleQuote": true }],
    "arrow-body-style": "off",
    "prefer-arrow-callback": "off"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "plugins": ["prettier"],
  "parser": "@babel/eslint-parser"
}
